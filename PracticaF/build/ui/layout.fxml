<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.Controller">

    <!-- 🔹 Sección superior: controles -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>

            <Label text="Nodos:" />
            <TextField fx:id="inputNodes" promptText="Ej: 5" prefWidth="60"/>

            <Label text="Aristas:" />
            <TextField fx:id="inputEdges" promptText="Ej: 7" prefWidth="60"/>

            <Button text="Generar Grafo" onAction="#onGenerateGraph"/>

            <Region HBox.hgrow="ALWAYS" />
            <Button text="Limpiar" onAction="#onClearGraph"/>
        </HBox>
    </top>

    <!-- 🔹 Sección central: área de dibujo -->
    <center>
        <AnchorPane fx:id="graphPane" style="-fx-background-color: #fafafa; -fx-border-color: #ccc;">
            <Canvas fx:id="canvas" width="600" height="400" />
        </AnchorPane>
    </center>

    <!-- 🔹 Sección inferior: resultados -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Resultado:" style="-fx-font-weight: bold;" />
            <Label fx:id="resultLabel" text="Esperando generación de grafo..." />
        </HBox>
    </bottom>

</BorderPane>
